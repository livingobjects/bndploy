<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>io.lambdacube.bndploy</groupId>
	<artifactId>bndploy</artifactId>
	<version>1.6</version>
	<packaging>bundle</packaging>

	<properties>
		<java.version>1.8</java.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<dependencies>
		<!-- OSGi -->
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.core</artifactId>
			<version>5.0.0</version>
		</dependency>

		<dependency>
			<groupId>com.google.guava</groupId>
			<artifactId>guava</artifactId>
			<version>31.0.1-jre</version>
		</dependency>

		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.7.12</version>
		</dependency>

		<dependency>
			<groupId>org.ops4j.pax.tinybundles</groupId>
			<artifactId>tinybundles</artifactId>
			<version>1.0.0</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>3.0.0</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<_include>-src/main/osgi/osgi.bnd</_include>
						<Embed-Dependency>tinybundles;scope=compile;inline=true</Embed-Dependency>
						<Embed-Transitive>true</Embed-Transitive>
						<Bundle-ClassPath><![CDATA[., ops4j-base-monitors-1.2.3.jar, bndlib-1.43.0.jar, ops4j-base-io-1.2.3.jar, ops4j-base-store-1.2.3.jar,	ops4j-base-lang-1.2.3.jar]]>
						</Bundle-ClassPath>
					</instructions>
				</configuration>
            </plugin>
		</plugins>
    </build>

    <distributionManagement>
        <repository>
            <id>nexus</id>
            <url>https://artifactory.liveaction.com/artifactory/releases</url>
        </repository>
        <snapshotRepository>
            <id>nexus</id>
            <url>https://artifactory.liveaction.com/artifactory/snapshots</url>
        </snapshotRepository>
    </distributionManagement>

</project>
